@{
    ViewBag.Title = "Get Designation ID";
}

<div class="container mt-4">
    <h2 class="text-primary">Enter Designation ID</h2>

    <form method="get" action="@Url.Action("EmployeesFromDesignationId", "Employee")" class="mt-3">
        <div class="mb-3">
            <label for="designationId" class="form-label fw-bold">Designation ID:</label>
            <input type="number" id="designationId" name="id" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Get Employees
        </button>
    </form>

    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary me-2">
        <i class="bi bi-list"></i> Back to Menu
    </a>
</div>
