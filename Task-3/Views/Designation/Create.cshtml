@model Task_3.Models.Designation

@{
    ViewBag.Title = "Create";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Create Designation</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Designation", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <h4 class="text-secondary">Designation Details</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(model => model.DesignationName, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.DesignationName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Designation Name" } })
                        @Html.ValidationMessageFor(model => model.DesignationName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                </div>
            }
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary me-2">
                <i class="bi bi-list"></i> Back to Menu
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
