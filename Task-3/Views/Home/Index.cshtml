@{
    ViewBag.Title = "Home Page";
}

<!-- Bootstrap CSS (Include if not already in your layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="text-center">
        <h1 class="fw-bold text-primary">Employee Management System</h1>
        <p class="lead text-muted">Manage employees and designations efficiently.</p>
    </div>

    <div class="row mt-4 justify-content-center">
        <!-- Employee Actions -->
        <div class="col-md-5 mb-4">
            <div class="card border-0 shadow-lg p-3">
                <div class="card-body text-center">
                    <h4 class="card-title text-dark fw-bold">Employee Actions</h4>
                    <hr>
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Index", "Employee")" class="btn btn-outline-primary">View All Employees</a>
                        <a href="@Url.Action("Create", "Employee")" class="btn btn-outline-secondary">Add New Employee</a>
                        <a href="@Url.Action("GetCountOnDesignation", "Employee")" class="btn btn-outline-primary">Employees Count by Designation</a>
                        <a href="@Url.Action("getEmployeeWithDesignation", "Employee")" class="btn btn-outline-secondary">Employees with Designation Name</a>
                        <a href="@Url.Action("EmployeeDetailsView", "Employee")" class="btn btn-outline-primary">Detailed Employee View</a>
                        <a href="@Url.Action("GetDesignationWithMoreThanOneEmployee", "Employee")" class="btn btn-outline-secondary">Designations with more than One Employee</a>
                        <a href="@Url.Action("EmployeeDetailsViewWithDesignation", "Employee")" class="btn btn-outline-primary">Employee View with Designation</a>
                        <a href="@Url.Action("GetDesignationId", "Employee")" class="btn btn-outline-secondary">Find Employees by Designation ID</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Designation Actions -->
        <div class="col-md-5 mb-4">
            <div class="card border-0 shadow-lg p-3">
                <div class="card-body text-center">
                    <h4 class="card-title text-dark fw-bold">Designation Actions</h4>
                    <hr>
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Index", "Designation")" class="btn btn-outline-success">View All Designations</a>
                        <a href="@Url.Action("Create", "Designation")" class="btn btn-outline-danger">Add New Designation</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (Include if not already in your layout) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
